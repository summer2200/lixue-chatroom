<div class="signUp">
    <div class="container">
        <form class="form-signin signUpForm" method="post" action="/sign-up">
            <h3 class="form-signin-heading">Welcome! Please sign up here.</h3><br>
            <label for="inputEmail" class="sr-only">User Name</label>
            <input class="form-control col-xs-12" type="text" placeholder="Your name" name="name" id="userName" required autofocus>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="email" name="email" class="form-control col-xs-12" placeholder="Email address" required>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="password" name="password" class="form-control col-xs-12" placeholder="Password" required>
            <label for="inputPassword" class="sr-only">Confirm Password</label>
            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm your password" required>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit" id="signUpButton">Sign Up</button>
        </form>
        <br>
        <div class="gotosignin">I've an account, <a href="/sign-in">sign in</a> here.</div>
    </div>
</div>
</div>
<script src="../js/user.js"></script>
